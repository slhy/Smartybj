<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_red_bg" >
		<FrameLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    >
		    
		    <ImageButton
            android:id="@+id/ib_base_content_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/img_menu" />
		    
		    <ImageButton
		        android:visibility="gone"
            android:id="@+id/ib_base_content_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/back" />
		    
		    
		    
		</FrameLayout>
        

        <TextView
            android:id="@+id/tv_base_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新闻中心"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        >
		    <!-- listview和gridview切换的按钮 -->
		    
		    <ImageButton
                android:visibility="gone"
            android:id="@+id/ib_base_content_listorgrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_pic_grid_type" />
		    
		    
		    
            <ImageButton
                android:visibility="gone"
            android:id="@+id/ib_base_content_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_textsize" />
            
            
            <ImageButton
                android:visibility="gone"
            android:id="@+id/ib_base_content_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_textsize" />
            
            <ImageButton
                android:visibility="gone"
            android:id="@+id/ib_base_content_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_share" />
            
        </LinearLayout>
        
    </RelativeLayout>
    
    

</LinearLayout>
